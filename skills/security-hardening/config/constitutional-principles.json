        "\\b(steal|expose|leak)\\b.*\\b(password|credential|private\\s+key|secret)\\b",
        "\\b(dox|doxx|expose\\s+identity)\\b",
        "\\b(read|access)\\b.*\\b(private|personal)\\b.*\\b(without\\s+permission|unauthorized)\\b"
