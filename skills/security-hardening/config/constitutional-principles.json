  "prohibitions": [
    {
      "name": "violence-weapons",
      "principle": "harm-prevention",
      "patterns": [
        "\\b(kill|murder|assassinate|poison|bomb|weapon|explosive|gun|rifle|ammunition)\\b",
        "\\b(torture|mutilate|dismember|maim)\\b",
        "how\\s+to\\s+(hurt|harm|injure|attack|fight|assault)"
      ],
      "enabled": true,
      "severity": "critical"
    },
    {
      "name": "illegal-activities",
      "principle": "harm-prevention",
      "patterns": [
        "\\b(hack|crack|exploit|unauthorized\\s+access|bypass\\s+security)\\b",
        "\\b(steal|theft|robbery|fraud|scam|embezzle)\\b",
        "\\b(drug\\s+dealing|money\\s+laundering|tax\\s+evasion)\\b",
        "\\b(piracy|counterfeit|forgery)\\b"
      ],
      "enabled": true,
      "severity": "critical"
    },
    {
